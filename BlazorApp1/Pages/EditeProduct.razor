@page "/p-Edite/{id:int}"
@using global::Shared
@inject BaseServices<Category> Catrepo;
@inject BaseServices<Product> proRepo
<h3>EditeProduct</h3>

@if(product != null)
{
    
<EditForm Model="product"  OnSubmit="Save">
        <div>
            <label>Name</label>
            <InputText @bind-Value="product.Name" class="form-control"></InputText>
        </div>
          <div>
            <label>Description</label>
            <InputText @bind-Value="product.Description" class="form-control"></InputText>
        </div>
        
        <div>
            <label>Price</label>
            <InputNumber @bind-Value="product.price" class="form-control"></InputNumber>
        </div>
       
        <div>
            <label>Category </label>
        
            <InputSelect @bind-Value="product.CatId" class="form-control">
                @foreach (var item in categories)
                   {
                       <option value="@item.Id">@item.Name</option>
                   }
            </InputSelect>
        </div>
        <div>
              <input type="submit" value="Update" class="btn btn-success">
              <a href="/p">
                  Back TO List
              </a>
        </div>
</EditForm>
}
